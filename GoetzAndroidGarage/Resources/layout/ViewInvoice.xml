<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:orientation="vertical"
    android:fadeScrollbars="false"
    android:background="#ffd0d0d0"
    android:scrollbars="vertical">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Invoice"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtInvoiceDisplay" 
                />
            <TextView
                android:text="Invoice Number:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInvoiceDisplay"
                android:id="@+id/txtInvoiceNumber" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtInvoiceNumber"
                android:id="@+id/txtInvoiceNumberResultt" 
                />
            <TextView
                android:text="Name:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInvoiceNumber"
                android:layout_alignRight="@+id/txtInvoiceNumber"
                android:id="@+id/txtName" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtName"
                android:layout_alignBottom="@+id/txtName"
                android:id="@+id/txtNameResultt"
                />
            <TextView
                android:text="Phone Number:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_alignRight="@+id/txtName"
                android:id="@+id/txtPhone" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtPhone"
                android:layout_alignBottom="@+id/txtPhone"
                android:id="@+id/txtPhoneResultt" 
                />
            <TextView
                android:text=" Vehicle Year:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPhone"
                android:layout_alignRight="@+id/txtPhone"
                android:id="@+id/txtVehicleYear" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtVehicleYear"
                android:layout_alignBottom="@+id/txtVehicleYear"
                android:id="@+id/txtVehicleYearResultt"
                />
            <TextView
                android:text="Vehicle Make:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVehicleYear"
                android:layout_alignRight="@+id/txtVehicleYear"
                android:id="@+id/txtVehicleMake" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtVehicleMake"
                android:id="@+id/txtVehicleMakeResultt"
                />
            <TextView
                android:text="Vehicle Model:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVehicleMake"
                android:layout_alignRight="@+id/txtVehicleMake"
                android:id="@+id/txtVehicleModel" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtVehicleModel"
                android:id="@+id/txtVehicleModelResulttttt" 
                />
            <TextView
                android:text="VIN:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVehicleModel"
                android:layout_alignRight="@+id/txtVehicleModel"
                android:id="@+id/txtVinn" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtVinn"
                android:id="@+id/txtVINResultt" 
                />
            <TextView
                android:text="License Plate:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVinn"
                android:layout_alignRight="@+id/txtVinn"
                android:id="@+id/txtLicensePlate" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtLicensePlate"
                android:id="@+id/txtLicensePlateResultt"
                />


            <TextView
                android:text="Services:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLicensePlate"
                android:layout_alignRight="@+id/txtVinn"
                android:id="@+id/txtServe" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtServe"
                android:layout_alignBottom="@+id/txtServe"
                android:id="@+id/txtServeResultt" 
                />
            
            <Button
                android:text="Back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtServe"
                android:id="@+id/btnBack"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>