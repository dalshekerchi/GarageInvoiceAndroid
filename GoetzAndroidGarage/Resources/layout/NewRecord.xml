
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:orientation="vertical"
    android:fadeScrollbars="false"
    android:background="#ffd0d0d0"
    android:scrollbars="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="New Invoice"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtNewRecord" 
                />
            <TextView
                android:text="Customer Infomation"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtCustomerInformation" 
                />
            <EditText
                android:hint="Enter Customer Name"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/InputCustomer"
                android:singleLine="true"
                android:inputType="textPersonName" 
                />
            <EditText
                android:hint="Enter Phone Number"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/InputPhone"
                android:singleLine="true"
                android:inputType="phone" 
                />
            <TextView
                android:text="Vehicle Information"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtVehicleInformation" 
                />
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Enter Vehicle Year"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/InputVehicleYear"
                android:maxLength="4"
                android:inputType="number" 
                />
            <TextView
                android:text="Vehicle Make"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtVehicleMake" />
            <Spinner
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SpinnerVehicleMake" />
            <TextView
                android:text="Vehicle Model"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtVehicleModel" />
            <Spinner
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SpinnerVehicleModel" />

            <android.support.design.widget.TextInputEditText
                android:hint="Enter VIN"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/InputVIN"
                android:singleLine="true"
                android:inputType="textCapCharacters" 
                />
            <android.support.design.widget.TextInputEditText
                android:hint="Enter License Plate"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/InputLicensePlate"
                android:singleLine="true"
                android:inputType="textCapCharacters" 
                />
            
            <TextView
                android:text="Date of Completed Work"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtDateofCompletion" 
                />
            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/InputDate" 
                />
            <android.support.design.widget.TextInputEditText
                android:hint="Enter Km"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:id="@+id/InputKm"
                />
            <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSubmit" 
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

