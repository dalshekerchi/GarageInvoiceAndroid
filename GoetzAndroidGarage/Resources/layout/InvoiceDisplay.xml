<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:orientation="vertical"
    android:fadeScrollbars="false"
    android:background="#ffd0d0d0"
    android:scrollbars="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Invoice"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtInvoiceDisplay" 
                />
            <TextView
                android:text="Invoice Number:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInvoiceDisplay"
                android:id="@+id/txtInvoiceNumber" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtInvoiceNumber"
                android:id="@+id/txtInvoiceNumberResult" 
                />
            <TextView
                android:text="Name:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInvoiceNumber"
                android:layout_alignRight="@+id/txtInvoiceNumber"
                android:id="@+id/txtName" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtName"
                android:layout_alignBottom="@+id/txtName"
                android:id="@+id/txtNameResult"
                />
            <TextView
                android:text="Phone Number:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_alignRight="@+id/txtName"
                android:id="@+id/txtPhone" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtPhone"
                android:layout_alignBottom="@+id/txtPhone"
                android:id="@+id/txtPhoneResult" 
                />
            <TextView
                android:text=" Vehicle Year:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPhone"
                android:layout_alignRight="@+id/txtPhone"
                android:id="@+id/txtVehicleYear" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtVehicleYear"
                android:layout_alignBottom="@+id/txtVehicleYear"
                android:id="@+id/txtVehicleYearResult"
                />
            <TextView
                android:text="Vehicle Make:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVehicleYear"
                android:layout_alignRight="@+id/txtVehicleYear"
                android:id="@+id/txtVehicleMake" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtVehicleMake"
                android:id="@+id/txtVehicleMakeResult"
                />
            <TextView
                android:text="Vehicle Model:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVehicleMake"
                android:layout_alignRight="@+id/txtVehicleMake"
                android:id="@+id/txtVehicleModel" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtVehicleModel"
                android:id="@+id/txtVehicleModelResult" 
                />
            <TextView
                android:text="VIN:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVehicleModel"
                android:layout_alignRight="@+id/txtVehicleModel"
                android:id="@+id/txtVinn" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtVinn"
                android:id="@+id/txtVINResult" 
                />
            <TextView
                android:text="License Plate:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVinn"
                android:layout_alignRight="@+id/txtVinn"
                android:id="@+id/txtLicensePlate" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtLicensePlate"
                android:id="@+id/txtLicensePlateResult"
                />
            <TextView
                android:text="Completion:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLicensePlate"
                android:layout_alignRight="@+id/txtVinn"
                android:id="@+id/txtDateofCompletion" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtDateofCompletion"
                android:id="@+id/txtDateofCompletionResult" 
                />
            <TextView
                android:text="Km:"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDateofCompletion"
                android:layout_alignRight="@+id/txtVinn"
                android:id="@+id/txtKM" 
            />
            <TextView
                android:text="Text"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txtInvoiceNumber"
                android:layout_alignBottom="@+id/txtKM"
                android:id="@+id/txtKMResult" 
                />
            
            <TextView
                android:text="Service:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtKMResult"
                android:id="@+id/txtServices"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtServices"
                android:id="@+id/Services"
                android:layout_marginTop="4dp" />

            <TextView
                android:text="Work Performed:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Services"
                android:id="@+id/txtWork"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark"/>
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtWork"
                android:id="@+id/InputWork"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lines="4"
                android:background="#ffe8e8e8" />

            <TextView
                android:text="Recommendations:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InputWork"
                android:id="@+id/txtRecommendation"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark"/>
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRecommendation"
                android:id="@+id/InputRecommendation"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lines="4"
                android:background="#ffe8e8e8" />
            <TextView
                android:text="Techicians:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InputRecommendation"
                android:id="@+id/txtTechician"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark"/>
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTechician"
                android:id="@+id/InputTechician1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:background="#ffe8e8e8"
                android:maxLines="1" />
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InputTechician1"
                android:id="@+id/InputTechician2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:background="#ffe8e8e8"
                android:maxLines="1" />
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InputTechician2"
                android:id="@+id/InputTechician3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:background="#ffe8e8e8"
                android:maxLines="1" />
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InputTechician3"
                android:id="@+id/InputTechician4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:background="#ffe8e8e8"
                android:maxLines="1" />
            <TextView
                android:text="Total:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InputTechician4"
                android:id="@+id/txtTotal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark"/>
            <TextView
                android:text="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtTotal"
                android:id="@+id/txtTotalResult"
                android:textSize="20sp"
                android:layout_alignBottom="@+id/txtTotal"
                android:layout_marginLeft="10dp" />
            <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTotal"
                android:id="@+id/btnSubmit"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>